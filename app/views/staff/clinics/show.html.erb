    </tr><br>
   <h4><%= t('view.clinic_information') %></h4>
    <% @informations.each do |information| %>
    <tr>
      <td><%= information.comment %></td>
      <td><%= link_to t('view.edit'), edit_staff_information_path(information.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to t('view.destroy'), staff_information_path(information.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
    <% end %>
  </table>
</div>
