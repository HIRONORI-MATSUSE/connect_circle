<div class ="show_clinic">
  <table class="table table-bordered">
    <tr>
      <th><%= t("view.clinic_name")%></th>
      <td><%= @clinic.name %></td>
    </tr>
    <tr>
      <th><%= t("view.address")%></th>
      <td><%= @clinic.address %></td>
    </tr>
    <tr>
      <th><%= t("view.phone_number")%></th>
      <td><%= @clinic.phone_number %></td>
    </tr>
  </table>
</div>
<div>
  <h1><%= image_tag @clinic.image.thumb.url %></h1>
</div> 
<div>
  <table class="table table-bordered">
    <tr>
      <th><%= t('view.notice') %></th>
      <th><%= t('view.edit') %></th>
      <th><%= t('view.destroy') %></th>
    </tr><br>
   <h4><%= t('view.clinic_information') %></h4>
    <% @informations.each do |information| %>
    <tr>
      <td><%= information.comment %></td>
      <td><%= link_to t('view.edit'), edit_staff_information_path(information.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to t('view.destroy'), staff_information_path(information.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
    <% end %>
  </table>
</div>
<div class=''><%= link_to t('view.information_create'), new_staff_information_path, class:"btn btn-primary" %></div>
