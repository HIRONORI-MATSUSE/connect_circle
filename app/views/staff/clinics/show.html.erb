<div class ="show_clinic">
  <table class="table table-bordered">
    <tr>
      <th><%= t("view.clinic_name")%></th>
      <td><%= @clinic.name %></td>
    </tr>
    <tr>
      <th><%= t("view.address")%></th>
      <td><%= @clinic.address %></td>
    </tr>
    <tr>
      <th><%= t("view.phone_number")%></th>
      <td><%= @clinic.phone_number %></td>
    </tr>
  </table><br>
  <h4>予約状況</h4>
  <table class="table table-bordered">
  <tr>
    <th><%= t('view.name') %></th>
    <th><%= t('view.reservation_start') %></th>
    <th><%= t('view.reservation_end') %></th>
    <th><%= t('view.edit') %></th>
    <th><%= t('view.destroy') %></th>
  </tr>
  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.name %></td>
      <td><%= reservation.start.strftime("%Y年 %m月%d日 %H:%M") %></td>
      <td><%= reservation.end.strftime("%Y年 %m月%d日 %H:%M") %></td>
      <td><%= link_to t("view.edit"), edit_staff_reservation_path(@clinic), class:"btn btn-primary" %> </td>
      <td><%= link_to t('view.destroy'), staff_clinic_path(reservation.id), method: :delete, class:"btn btn-primary" %></td>   
    </tr>
  <% end %>
  <%# <%= paginate @reservations %> 
</table>
<%= link_to "全ての予約を確認する", staff_clinic_path(start: :asc), class:"btn btn-info" %>
<%= link_to "本日の残りの予約を確認する", staff_clinic_path(sort_today: "true"), class:"btn btn-info" %>
</div>
<div>
  <h1><%= image_tag @clinic.image.thumb.url %></h1>
</div> 
<div>
  <table class="table table-bordered">
    <tr>
