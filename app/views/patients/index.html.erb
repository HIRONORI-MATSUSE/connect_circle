<h1>患者一覧</h1>
 <table class="table table-bordered">
      <tr>
        <th>画像</th>
        <th>名前</th>
        <th>性別</th>
        <th>生年月日</th>
        <th>詳細</th>
      </tr>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= image_tag patient.image.url %></td>
        <td><%= patient.name %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.birthday %></td>
        <td><%= link_to '詳細', patient_path(patient.id) %></td>
      </tr>
    <% end %>
  </table>

