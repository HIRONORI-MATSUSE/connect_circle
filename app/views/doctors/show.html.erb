<h1>治療院用マイページ</h1>

 <table class="table table-bordered">
      <tr>
        <th>お知らせ</th>
      </tr>
    <% @informations.each do |information| %>
      <tr>
        <td><%= information.comment %></td>
      </tr>
    <% end %>
  </table>

<div class = "">
  <%= image_tag @doctor.image.thumb.url %>
</div>

<div class ="">
  <table class="table table-bordered">
    <tr>
      <th><%= t('view.name') %></th>
      <td><%= @doctor.name %></td>
    </tr>
    <tr>
      <th><%= t('view.gender') %></th>
      <td><%= @doctor.gender %></td>
    </tr>
    <tr>
      <th><%= t('view.birthday') %></th>
      <td><%= @doctor.birthday %></td>
    </tr>
    <tr>
      <th><%= t('view.phone_number') %></th>
      <td><%= @doctor.phone_number %></td>
    </tr>
    <tr>
      <th><%= t('view.qualification') %></th>
      <td><%= @doctor.qualifications.name %></td>
    </tr>
    <tr>
      <th><%= t('view.comment') %></th>
      <td><%= @doctor.comment %></td>
    </tr>
    <tr>
      <th><%= t('view.admin') %></th>
        <% if current_user.doctor.admin == true %>
          <td><%= t('view.true') %></td>
        <% else %>
          <td><%= t('view.false') %></td>
        <% end %>
    </tr>
  </table>
</div>

<% if current_user.id == @doctor.user.id || @doctor.admin == true %>
  <div><%= link_to t("view.edit"), edit_doctor_path(@doctor) %></div>
  <div><%= link_to t("view.clinic_information"), staff_clinic_path(current_user.doctor.clinic.id) %></div>
  <div><%= link_to t("view.staff_index"), doctors_path %></div>
  <div><%= link_to t("view.patient_index"), patients_path %></div>
<% elsif current_user.id == !@doctor.user.id %>
  <div><%= link_to t("view.staff_index"), doctors_path %></div>
  <div><%= link_to t("view.patient_index"), patients_path %></div>
<% else %>
  <div><%= link_to t("view.staff_index"), doctors_path %></div>
  <div><%= link_to t("view.patient_index"), patients_path %></div>
<% end %>


