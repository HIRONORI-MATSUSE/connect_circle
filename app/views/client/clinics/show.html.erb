<div class ="show_clinic">
  <h1><%= @clinic.name %></h1>

  <table class="table table-bordered"><br>
      <tr>
        <h4><%= t('view.clinic_information') %></h4>
      </tr>
    <% @clinic.informations.each do |information| %>
      <tr>
        <td><%= information.comment %></td>
      </tr>
    <% end %>
  </table><br>

  <h1><%= image_tag @clinic.image.thumb.url %></h1><br>

  <h1><%= @clinic.address %></h1>
  <h1><%= @clinic.phone_number %></h1>
</div>
<div class=""><%= link_to "予約をする", reservations_path, class:"btn btn-primary" %></div>


